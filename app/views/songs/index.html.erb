<p id="notice"><%= notice %></p>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Album</th>
      <th>Track Number</th>
      <th>Length</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.album.title %></td>
        <td><%= song.track_number %></td>
        <td><%= song.length %></td>
        <td><%= link_to 'Show', song, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_song_path(song), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

